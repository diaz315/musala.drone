<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="CheckDronesBatteryTask" fileName="/logs/globallog.log/checkDronesBatteryTask.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
        <File name="TaskBFile" fileName="/path/to/taskB.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="com.musala.drone.drone.application.usecase.checkDronesBatteryTask" level="info" additivity="false">
            <AppenderRef ref="CheckDronesBatteryTask" />
        </Logger>
        <Logger name="com.example.taskB" level="info" additivity="false">
            <AppenderRef ref="TaskBFile" />
        </Logger>
    </Loggers>
</Configuration>